<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ooamo.system.mapper.FlowFormMapper">

    <resultMap type="FlowForm" id="FlowFormResult">
        <result property="id"    column="id"    />
        <result property="formId"    column="formId"    />
        <result property="applytime"    column="applytime"    />
        <result property="applyer"    column="applyer"    />
    </resultMap>

    <sql id="selectFlowFormVo">
        select id, formId, applytime, applyer from flowForm
    </sql>

    <select id="selectFlowFormList" parameterType="FlowForm" resultMap="FlowFormResult">
        <include refid="selectFlowFormVo"/>
        <where>
            <if test="formId != null and formId != ''"> and formId = #{formId}</if>
            <if test="params.beginApplytime != null and params.beginApplytime != '' and params.endApplytime != null and params.endApplytime != ''"> and applytime between #{params.beginApplytime} and #{params.endApplytime}</if>
            <if test="applyer != null  and applyer != ''"> and applyer = #{applyer}</if>
        </where>
    </select>

    <select id="selectFlowFormById" parameterType="String" resultMap="FlowFormResult">
        <include refid="selectFlowFormVo"/>
        where id = #{id}
    </select>

    <insert id="insertFlowForm" parameterType="FlowForm" useGeneratedKeys="true" keyProperty="id">
        insert into flowForm
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">id,</if>
            <if test="formId != null and formId != ''">formId,</if>
            <if test="applytime != null">applytime,</if>
            <if test="applyer != null">applyer,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null and id != ''">#{id},</if>
            <if test="formId != null and formId != ''">#{formId},</if>
            <if test="applytime != null">#{applytime},</if>
            <if test="applyer != null">#{applyer},</if>
        </trim>
    </insert>

    <update id="updateFlowForm" parameterType="FlowForm">
        update flowForm
        <trim prefix="SET" suffixOverrides=",">
            <if test="id != null and id != ''">id = #{id},</if>
            <if test="formId != null and formId != ''">formId = #{formId},</if>
            <if test="applytime != null">applytime = #{applytime},</if>
            <if test="applyer != null">applyer = #{applyer},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFlowFormById" parameterType="String">
        delete from flowForm where id = #{id}
    </delete>

    <delete id="deleteFlowFormByIds" parameterType="String">
        delete from flowForm where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>